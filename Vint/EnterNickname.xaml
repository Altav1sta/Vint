        <Label Content="Введите ваш никнейм:" HorizontalContentAlignment="Center" Width="150" FontWeight="Bold" Margin="22,0,8,0"/>
        <TextBox Name="txtBox" Margin="0,26,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" Text="Player"  VerticalAlignment="Top" 
                 Width="160" FontStyle="Italic" KeyDown="TextBox_KeyDown" Background="#FFF5F3F3" Grid.ColumnSpan="2" Foreground="Gray"/>

    </Grid>
